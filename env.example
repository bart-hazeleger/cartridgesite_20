# ------------------------
# Next.js frontend
# ------------------------

# Base URL van je backend API (ASP.NET Core)
NEXT_PUBLIC_API_BASE=http://localhost:8080

# Secret voor Next.js on-demand revalidate endpoint
REVALIDATE_SECRET=changeme-secret

# Node env (development | production)
NODE_ENV=development

# ------------------------
# ASP.NET Core backend
# ------------------------

# MySQL connectiestring
# Formaat: Server=host;Port=3306;Database=db;User=user;Password=pass;
DB_CONNECTION=Server=localhost;Port=3306;Database=shop;User=root;Password=changeme;

# Redis connectie (cache)
REDIS_CONNECTION=localhost:6379

# ASP.NET Core environment (Development | Production)
ASPNETCORE_ENVIRONMENT=Development

# Logging level
LOG_LEVEL=Information

# Secret voor webhook authenticatie (bijvoorbeeld Sherpa â†’ API)
CMS_WEBHOOK_SECRET=changeme-webhook

# ------------------------
# Optioneel
# ------------------------

# Poort waarop de API draait
PORT=8080

# CDN domein (voor next/image remotePatterns)
CDN_DOMAIN=cdn.example.com