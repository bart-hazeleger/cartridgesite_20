{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "prettier", "tailwindcss"],
  "extends": [
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended",
    "plugin:tailwindcss/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": "warn",

    /* TypeScript – streng maar pragmatisch */
    "@typescript-eslint/explicit-module-boundary-types": "off",
    "@typescript-eslint/no-unused-vars": [
      "warn",
      { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }
    ],

    /* Next.js – liever image component, maar niet te agressief in de spike */
    "@next/next/no-img-element": "off",

    /* Tailwind – laat plugin class volgorde checken (werkt samen met prettier-plugin-tailwindcss) */
    "tailwindcss/classnames-order": "warn",
    "tailwindcss/no-custom-classname": "off"
  },
  "settings": {
    "tailwindcss": { "callees": ["cn", "clsx", "cva"] },
    "next": { "rootDir": ["apps/*/", "./"] }
  },
  "ignorePatterns": ["node_modules/", ".next/", "out/", "dist/", "coverage/"]
}
